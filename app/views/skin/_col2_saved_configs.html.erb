<div class="yui-g bottom">
  <h2>Your saved configurations</h2>
  <table class="saved_configs">
    <tbody>
      <% unless saved_configurations.empty? %>
      <% for config in saved_configurations %>
      <tr class="<%= cycle('row-odd', 'row-even') %>">
        <td class="config_name">
          <%= link_to config.name, config %>
        </td>
        <td class="buttons">
          <div class="yui-g">
            <div class="yui-u first">
              <div class="icon edit" title="Edit">
                <%= link_to 'Edit', edit_tag_configuration_path(config) %>
              </div>
            </div>
            <div class="yui-u">
              <div class="icon delete" title="Delete">
                <%= link_to 'Delete', config, :confirm => 'Are you sure?', :method => :delete %>
              </div>
            </div>
          </div>
        </td>
      </tr>
      <% end %>
      <% else %>
      <tr class="<%= cycle('row-odd', 'row-even') %>">
        <td colspan="2">None</td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <div class="button new">
    <%= link_to 'Create a new configuration', new_tag_configuration_path %>
  </div>
</div>
